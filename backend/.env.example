# OpenAI API Settings
OPENAI_API_KEY="your_openai_api_key_here"
OPENAI_BASE_URL="https://api.openai.com/v1"
OPENAI_MODEL="gpt-3.5-turbo"
OPENAI_MODEL_CHEAT_CHECK="qwen3-235b-a22b"

# JWT Settings
SECRET_KEY="a_very_secret_key_that_should_be_changed"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Authentication Settings (Username/Password System)
# Format: username1:password1,username2:password2,username3:password3
# Example: AUTH_USERS="admin:admin123,player1:password1,player2:password2"
AUTH_USERS="admin:changeme123,demo:demo123"

# --- Database ---
# The connection string for your SQLite database.
#
# For a Linux or macOS absolute path, use FOUR slashes:
# Example: DATABASE_URL="sqlite:////path/to/your/veloera.db"
#
# For a Windows absolute path, use THREE slashes:
# Example: DATABASE_URL="sqlite:///C:/path/to/your/veloera.db"
#
# The default value below points to a file in the project's root directory.
# DATABASE_URL="sqlite:///veloera.db"
DATABASE_URL="mysql://user:password@host:port/database"

# --- Server Settings ---
HOST="127.0.0.1"
PORT=8000
UVICORN_RELOAD=true